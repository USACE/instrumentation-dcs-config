<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<PlatformConfig ConfigName="JONN6-Shef">
  <Description>
    Dynamic decoding script to handle basic parameters like stage, precip, and
    battery voltage with SHEF formatted parameter codes.
  </Description>
  <ConfigSensor SensorNumber="1">
    <SensorName>HG</SensorName>
        <DataType Standard="RSGIS" Code="Stage"/>
    <RecordingMode>F</RecordingMode>
    <RecordingInterval>00:00</RecordingInterval>
    <TimeOfFirstSample>00:00</TimeOfFirstSample>
  </ConfigSensor>
  <ConfigSensor SensorNumber="2">
    <SensorName>PC</SensorName>
    <DataType Standard="RSGIS" Code="Precipitation"/>
    <RecordingMode>F</RecordingMode>
    <RecordingInterval>00:00</RecordingInterval>
    <TimeOfFirstSample>00:00</TimeOfFirstSample>
  </ConfigSensor>
  <ConfigSensor SensorNumber="3">
    <SensorName>VB</SensorName>
    <DataType Standard="RSGIS" Code="Volt"/>
    <RecordingMode>F</RecordingMode>
    <RecordingInterval>00:00</RecordingInterval>
    <TimeOfFirstSample>00:00</TimeOfFirstSample>
  </ConfigSensor>
  <DecodesScript ScriptName="ST">
    <ScriptType>Decodes:goes-self-timed</ScriptType>
    <FormatStatement Label="scan">s(1,a,scan),f(f,a,10d&apos; &apos;)</FormatStatement>
    <FormatStatement Label="stage">&gt;HG</FormatStatement>
    <FormatStatement Label="ST">&gt;HG</FormatStatement>
    <FormatStatement Label="HG">
      f(moff,a,4d&apos;#&apos;),x,f(mint-,a,3d&apos; &apos;,1)&gt;HGVAL
    </FormatStatement>
    <FormatStatement Label="HGVAL">
      f(s,a,10d&apos; &apos;,1),x,c(&apos;:&apos;,HGVAL)&gt;scan
    </FormatStatement>
    <FormatStatement Label="RainAcc">&gt;PC</FormatStatement>
    <FormatStatement Label="rain">&gt;PC</FormatStatement>
    <FormatStatement Label="PC">
      f(moff,a,4d&apos;#&apos;),x,f(mint-,a,3d&apos; &apos;,2)&gt;PCVAL
    </FormatStatement>
    <FormatStatement Label="PCVAL">
      f(s,a,10d&apos; &apos;,2),x,c(&apos;:&apos;,PCVAL)&gt;scan
    </FormatStatement>
    <FormatStatement Label="BV">&gt;VB</FormatStatement>
    <FormatStatement Label="VB">
      f(moff,a,4d&apos;#&apos;),x,f(mint-,a,3d&apos; &apos;,3)&gt;VBVAL
    </FormatStatement>
    <FormatStatement Label="VBVAL">
      f(s,a,10d&apos; &apos;,3),x,c(&apos;:&apos;,VBVAL)&gt;scan
    </FormatStatement>
    <FormatStatement Label="error">&gt;scan</FormatStatement>
    <ScriptSensor SensorNumber="1">
      <UnitConverter FromUnitsAbbr="raw" ToUnitsAbbr="ft">
        <Algorithm>none</Algorithm>
        <A>0.0</A>
        <B>0.0</B>
        <C>0.0</C>
        <D>0.0</D>
        <E>0.0</E>
        <F>0.0</F>
      </UnitConverter>
    </ScriptSensor>
    <ScriptSensor SensorNumber="2">
      <UnitConverter FromUnitsAbbr="raw" ToUnitsAbbr="in">
        <Algorithm>none</Algorithm>
        <A>0.0</A>
        <B>0.0</B>
        <C>0.0</C>
        <D>0.0</D>
        <E>0.0</E>
        <F>0.0</F>
      </UnitConverter>
    </ScriptSensor>
    <ScriptSensor SensorNumber="3">
      <UnitConverter FromUnitsAbbr="raw" ToUnitsAbbr="V">
        <Algorithm>none</Algorithm>
        <A>0.0</A>
        <B>0.0</B>
        <C>0.0</C>
        <D>0.0</D>
        <E>0.0</E>
        <F>0.0</F>
      </UnitConverter>
    </ScriptSensor>
  </DecodesScript>
</PlatformConfig>
