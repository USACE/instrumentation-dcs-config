<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<PlatformConfig ConfigName="KNVN6-Kenyonville">
  <Description>
    Oak Orchard Creek near Kenyonville (KNVN6) requires a specific decoding
    configuration (script) due to its none standard transmission format. Data is
    sent as a table with carriage returns.
  </Description>
  <ConfigSensor SensorNumber="1">
    <SensorName>HG</SensorName>
    <DataType Standard="MIDAS" Code="Stage"/>
    <RecordingMode>F</RecordingMode>
    <RecordingInterval>00:15</RecordingInterval>
    <TimeOfFirstSample>00:00</TimeOfFirstSample>
  </ConfigSensor>
  <ConfigSensor SensorNumber="2">
    <SensorName>PC</SensorName>
    <DataType Standard="MIDAS" Code="Precipitation"/>
    <RecordingMode>F</RecordingMode>
    <RecordingInterval>00:15</RecordingInterval>
    <TimeOfFirstSample>00:00</TimeOfFirstSample>
  </ConfigSensor>
  <ConfigSensor SensorNumber="3">
    <SensorName>VB</SensorName>
    <DataType Standard="MIDAS" Code="Volt"/>
    <RecordingMode>F</RecordingMode>
    <RecordingInterval>01:00</RecordingInterval>
    <TimeOfFirstSample>00:00</TimeOfFirstSample>
  </ConfigSensor>
  <DecodesScript ScriptName="ST">
    <ScriptType>Decodes:goes-self-timed</ScriptType>
    <DataOrder>D</DataOrder>
    <FormatStatement Label="scan">/,&gt;HG</FormatStatement>
    <FormatStatement Label="HG">f(s,a,5,1),7(f(s,a,6,1)),/,&gt;PC</FormatStatement>
    <FormatStatement Label="PC">f(s,a,5,2),7(f(s,a,6,2)),/,&gt;VB</FormatStatement>
    <FormatStatement Label="VB">f(s,a,4,3)</FormatStatement>
    <FormatStatement Label="error">&gt;scan</FormatStatement>
    <ScriptSensor SensorNumber="1">
      <UnitConverter FromUnitsAbbr="raw" ToUnitsAbbr="ft">
        <Algorithm>none</Algorithm>
        <A>0.0</A>
        <B>0.0</B>
        <C>0.0</C>
        <D>0.0</D>
        <E>0.0</E>
        <F>0.0</F>
      </UnitConverter>
    </ScriptSensor>
    <ScriptSensor SensorNumber="2">
      <UnitConverter FromUnitsAbbr="raw" ToUnitsAbbr="in">
        <Algorithm>none</Algorithm>
        <A>0.0</A>
        <B>0.0</B>
        <C>0.0</C>
        <D>0.0</D>
        <E>0.0</E>
        <F>0.0</F>
      </UnitConverter>
    </ScriptSensor>
    <ScriptSensor SensorNumber="3">
      <UnitConverter FromUnitsAbbr="raw" ToUnitsAbbr="V">
        <Algorithm>none</Algorithm>
        <A>0.0</A>
        <B>0.0</B>
        <C>0.0</C>
        <D>0.0</D>
        <E>0.0</E>
        <F>0.0</F>
      </UnitConverter>
    </ScriptSensor>
  </DecodesScript>
</PlatformConfig>
